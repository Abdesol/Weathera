                        <Label Text="Humidity" FontSize="15" HorizontalTextAlignment="Center" TextColor="White"/>
                    </StackLayout>

                    <StackLayout Orientation="Vertical">
                        <Image Source="wind.png" HeightRequest="35" Margin="0,10" />
